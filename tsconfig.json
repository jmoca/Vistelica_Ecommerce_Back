{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,  // Asegúrate de que esté en true
    "experimentalDecorators": true
  },
  "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}